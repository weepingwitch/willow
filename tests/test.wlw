#testing file reading/writing#
fun testfileio
{
  myvar = "hello filesystem!";
  fileout("myfile.txt")(myvar);
  filename = "myfile.txt";
  myresult = filein(filename);
  print myresult; #should print "hello filesystem!"#
}

